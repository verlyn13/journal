# Upstash Redis Configuration Template
# Copy to .env.local and fill in values from Upstash dashboard

# Redis Connection
REDIS_URL=rediss://default:YOUR_PASSWORD@YOUR_ENDPOINT.upstash.io:6379
REDIS_REST_URL=https://YOUR_ENDPOINT.upstash.io
REDIS_REST_TOKEN=YOUR_REST_TOKEN

# Optional: Read-only replica
REDIS_REPLICA_URL=rediss://default:YOUR_PASSWORD@YOUR_REPLICA_ENDPOINT.upstash.io:6379

# Configuration
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=10
REDIS_DECODE_RESPONSES=true
REDIS_RETRY_ON_ERROR=true
REDIS_RETRY_MAX_ATTEMPTS=3
REDIS_RETRY_DELAY=1

# Feature flags
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=300
REDIS_SESSION_TTL=1800

# Rate limiting
REDIS_RATE_LIMIT_ENABLED=true
REDIS_RATE_LIMIT_WINDOW=60
REDIS_RATE_LIMIT_MAX_REQUESTS=100

# Notes:
# 1. Get credentials from: https://console.upstash.com/redis
# 2. Use REST API for serverless/edge functions
# 3. Use Redis protocol for persistent connections
# 4. Enable TLS (rediss://) for production
# 5. Consider regional replicas for low latency