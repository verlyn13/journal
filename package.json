{
	"name": "journal",
	"version": "1.0.0",
	"description": "A personal journal tool for documenting progress. Built with Flask, HTMX, and Alpine.js.",
	"main": "index.js",
	"directories": {
		"doc": "docs",
		"test": "tests"
	},
	"scripts": {
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:visual": "playwright test --project=visual",
		"test:a11y": "playwright test --project=a11y",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome ci --reporter=github .",
		"typecheck": "tsc --noEmit",
		"build": "rollup -c rollup.config.js --failAfterWarnings",
		"build:verbose": "rollup -c rollup.config.js --failAfterWarnings --logLevel info --environment BUILD_DETAIL:true",
		"build:debug": "rollup -c rollup.config.js --failAfterWarnings --logLevel debug --environment BUILD_DETAIL:true",
		"dev": "rollup -c rollup.config.js -w --logLevel info --environment BUILD_DETAIL:true",
		"dev:silent": "rollup -c rollup.config.js -w --silent",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"docs": "jsdoc -c jsdoc.conf.json",
		"lint:md": "npx markdownlint \"docs/**/*.md\"",
		"lint:links": "npx markdown-link-check \"docs/**/*.md\"",
		"docs:fetch": "bun run fetch-docs.ts",
		"docs:fetch:enhanced": "bun run fetch-docs-enhanced.ts --force",
		"docs:update": "./docs.sh update",
		"docs:backup": "./docs.sh backup",
		"docs:restore": "./docs.sh restore",
		"docs:serve": "./docs.sh serve",
		"docs:search": "./docs.sh search",
		"docs:convert": "./docs.sh convert",
		"docs:check": "./docs.sh check",
		"docs:clean": "./docs.sh clean",
		"py:sync": "uv sync",
		"py:lint": "uv run ruff check .",
		"py:fix": "uv run ruff check . --fix --unsafe-fixes && uv run ruff format .",
		"py:format": "uv run ruff format .",
		"py:typecheck": "uv run mypy .",
		"py:test": "uv run pytest -q",
		"py:dev": "uv run python run.py",
		"lint:all": "bun run lint && bun run py:lint",
		"format:all": "bun run format && bun run py:format",
		"check:all": "bun run check && bun run py:lint && bun run py:typecheck && bun run py:test && bun run test:a11y"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/verlyn13/journal.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "module",
	"bugs": {
		"url": "https://github.com/verlyn13/journal/issues"
	},
	"homepage": "https://github.com/verlyn13/journal#readme",
	"engines": {
		"node": ">=20",
		"bun": ">=1.2.21"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@playwright/test": "1.55.0",
		"@rollup/plugin-commonjs": "28.0.6",
		"@rollup/plugin-node-resolve": "16.0.1",
		"@rollup/plugin-terser": "0.4.4",
		"@storybook/addon-a11y": "8.6.14",
		"@storybook/addon-essentials": "8.6.14",
		"@storybook/addon-interactions": "8.6.14",
		"@storybook/builder-vite": "8.6.14",
		"@storybook/html-vite": "8.6.14",
		"@storybook/test": "8.6.14",
		"autoprefixer": "10.4.21",
		"axe-playwright": "2.1.0",
		"bun-types": "1.2.21",
		"cssnano": "7.1.1",
		"jsdoc": "4.0.4",
		"markdown-link-check": "3.13.7",
		"markdownlint-cli": "0.45.0",
		"minami": "1.2.3",
		"postcss": "8.5.6",
		"postcss-import": "16.1.1",
		"rollup": "4.49.0",
		"rollup-plugin-filesize": "10.0.0",
		"rollup-plugin-output-manifest": "2.0.0",
		"rollup-plugin-postcss": "4.0.2",
		"storybook": "8.6.14",
		"storybook-addon-performance": "0.17.3",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@codemirror/commands": "6.8.1",
		"@codemirror/lang-markdown": "6.3.4",
		"@codemirror/language": "6.11.3",
		"@codemirror/language-data": "6.5.1",
		"@codemirror/state": "6.5.2",
		"@codemirror/view": "6.38.1",
		"alpinejs": "3.14.9",
		"codemirror": "6.0.2",
		"marked": "16.2.1",
		"taffydb": "2.7.3"
	}
}
