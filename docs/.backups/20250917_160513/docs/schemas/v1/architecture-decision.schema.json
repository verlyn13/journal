{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://journal.app/schemas/architecture-decision.schema.json",
  "title": "Architecture Decision Record Schema",
  "description": "Schema for Architecture Decision Records (ADRs)",
  "allOf": [
    {"$ref": "./base-document.schema.json"},
    {
      "type": "object",
      "properties": {
        "metadata": {
          "properties": {
            "type": {
              "const": "decision"
            },
            "adr_number": {
              "type": "integer",
              "minimum": 1,
              "description": "Sequential ADR number"
            }
          },
          "required": ["adr_number"]
        },
        "decision": {
          "type": "object",
          "required": ["status", "context", "decision", "consequences"],
          "properties": {
            "status": {
              "type": "string",
              "enum": ["proposed", "accepted", "rejected", "deprecated", "superseded"],
              "description": "Decision status"
            },
            "decision_date": {
              "type": "string",
              "format": "date",
              "description": "Date decision was made"
            },
            "participants": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "role"],
                "properties": {
                  "name": {"type": "string"},
                  "role": {"type": "string"},
                  "email": {"type": "string", "format": "email"}
                }
              },
              "description": "Decision participants"
            },
            "context": {
              "type": "object",
              "required": ["background", "problem_statement", "constraints"],
              "properties": {
                "background": {
                  "type": "string",
                  "minLength": 50,
                  "description": "Background and motivation"
                },
                "problem_statement": {
                  "type": "string",
                  "minLength": 20,
                  "description": "Clear problem definition"
                },
                "constraints": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Technical and business constraints"
                },
                "requirements": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "description", "priority"],
                    "properties": {
                      "id": {"type": "string"},
                      "description": {"type": "string"},
                      "priority": {
                        "type": "string",
                        "enum": ["must", "should", "could", "wont"]
                      }
                    }
                  },
                  "description": "Requirements (MoSCoW prioritization)"
                }
              }
            },
            "decision": {
              "type": "object",
              "required": ["summary", "rationale"],
              "properties": {
                "summary": {
                  "type": "string",
                  "minLength": 20,
                  "maxLength": 200,
                  "description": "Decision summary"
                },
                "rationale": {
                  "type": "string",
                  "minLength": 50,
                  "description": "Detailed reasoning"
                },
                "implementation_notes": {
                  "type": "string",
                  "description": "Implementation guidance"
                }
              }
            },
            "options_considered": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "object",
                "required": ["name", "description", "pros", "cons"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Option name"
                  },
                  "description": {
                    "type": "string",
                    "description": "Option description"
                  },
                  "pros": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 1,
                    "description": "Advantages"
                  },
                  "cons": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 1,
                    "description": "Disadvantages"
                  },
                  "cost": {
                    "type": "object",
                    "properties": {
                      "development": {"type": "string"},
                      "operational": {"type": "string"},
                      "maintenance": {"type": "string"}
                    },
                    "description": "Cost analysis"
                  },
                  "risk_level": {
                    "type": "string",
                    "enum": ["low", "medium", "high", "critical"],
                    "description": "Risk assessment"
                  }
                }
              },
              "description": "Alternative options evaluated"
            },
            "consequences": {
              "type": "object",
              "required": ["positive", "negative", "risks"],
              "properties": {
                "positive": {
                  "type": "array",
                  "items": {"type": "string"},
                  "minItems": 1,
                  "description": "Positive outcomes"
                },
                "negative": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Negative impacts"
                },
                "risks": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["description", "probability", "impact", "mitigation"],
                    "properties": {
                      "description": {"type": "string"},
                      "probability": {
                        "type": "string",
                        "enum": ["low", "medium", "high"]
                      },
                      "impact": {
                        "type": "string",
                        "enum": ["low", "medium", "high", "critical"]
                      },
                      "mitigation": {"type": "string"}
                    }
                  },
                  "description": "Identified risks and mitigations"
                },
                "technical_debt": {
                  "type": "string",
                  "description": "Technical debt introduced"
                }
              }
            },
            "validation": {
              "type": "object",
              "properties": {
                "success_criteria": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "How to measure success"
                },
                "review_date": {
                  "type": "string",
                  "format": "date",
                  "description": "When to review this decision"
                },
                "review_triggers": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Events that trigger review"
                }
              }
            }
          }
        }
      }
    }
  ]
}